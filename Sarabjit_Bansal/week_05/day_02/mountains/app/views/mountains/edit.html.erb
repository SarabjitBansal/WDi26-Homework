<h2>Edit Mountain</h2>
<form action="/mountains/<%= @mountain.id %>" method="post">

  <label>Name:</label>
  <input type="text" name="mountain[name]" placeholder="Mount Everest" value = "<%= @mountain.name %>">

  <label>Image:</label>
  <input type="url" name="mountain[image]" placeholder="http://..." value = "<%= @mountain.image %>">

  <label>Place:</label>
  <input type="text" name="mountain[place]" placeholder="Nepal"  value = "<%= @mountain.place %>">

  <label>Height:</label>
  <input type="number" name="mountain[height]" placeholder="8848"  value = "<%= @mountain.height %>">

  <button>Update mountain</button>
</form>
